system.require("_bitmap")system.require("_color")system.require("_window")system.require("_calendar")system.require("_counter")system.require("_colorpicker")system.require("_imagegadget")system.require("_button")system.require("_select")system.require("_checkbox")system.require("_label")system.require("_radio")system.require("_radiogroup")system.require("_scrollarea")system.require("_progressbar")system.require("_textbox")system.require("_textarea")local wnd1;local wnd2;local wnd3;local cntr;local clrpckr;local clndr;local imggadget;local btn;local slc;local chkbx;local lbl;local lbl1;local lbl2;local lbl3;local radgrp;local rad1;local rad2;local rad3;local scrllarea;local prg;local txtbx;local txtarea;function main()	-- Radio box test	wnd1 = _window( 80 , 47 , 5 , 5 , "Radiobuttons" , "notResizeable" )		radgrp = _radiogroup()	rad1 = _radio( 3 , 3 , radgrp )	rad2 = _radio( 3 , 13 , radgrp )	rad3 = _radio( 3 , 23 , radgrp )	lbl1 = _label( 15 , 4 , "Option 1" )	lbl2 = _label( 15 , 14 , "Option 2" )	lbl3 = _label( 15 , 24 , "Option ...3!" )		wnd1.addChild( rad1 )	wnd1.addChild( rad2 )	wnd1.addChild( rad3 )		wnd1.addChild( lbl1 )	wnd1.addChild( lbl2 )	wnd1.addChild( lbl3 )		system.addChild( wnd1 )	--		-- Colorpicker, calendar Test	wnd2 = _window( 168 , 100 , 5 , 5 , "Special Gadgets" , "notResizeable" )		clrpckr = _colorpicker( 60 , 40 , 3 , 3 )	clrpckr.setInternalEventHandler( "onChange" , colorHandler )	clndr = _calendar( 99 , 80 , 66 , 3 , 2013 , 6 , 5 )		wnd2.addChild( clrpckr )	wnd2.addChild( clndr )	--		system.addChild( wnd2 )endfunction colorHandler( event )	local bmp = _bitmap( 6 , 6 )	local col = _color( clrpckr.color )		if col.lum < 50 then		bmp.reset( system.rgb( 31 , 31 , 31 ) )	else		bmp.reset( system.rgb( 0 , 0 , 0 ) )	end	bmp.drawFilledRect( 1 , 1 , 4 , 4 , clrpckr.color )	wnd2.icon = bmpend